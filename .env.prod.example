ENABLE_HTTPS=true
LETSENCRYPT_EMAIL=example@example.com
ENABLE_MONITORING=true
ENABLE_K3S_AUTO_INSTALL=true

# backend
VITE_TELEGRAM_BOT_NAME=examplebot
VITE_API_URL=http://domain/api/
VITE_ADMIN=telegram_user_id
VITE_GRAFANA_URL=https://grafana.domain

# frontend
REMNAWAVE_BASE_URL=https://domain
REMNAWAVE_TOKEN=token
REMNAWAVE_COOKIE=AAAaaaAA=BBBbbbBB
TELEGRAM_BOT_NAME=examplebot
TELEGRAM_BOT_TOKEN=tokenbot
TELEGRAM_GROUP_CHAT_ID=chatid

DJANGO_DEBUG=False
DJANGO_DB_SSL_REQUIRE=True
DJANGO_ALLOWED_HOSTS=domain
DJANGO_CSRF_TRUSTED_ORIGINS=https://domain
DATABASE_URL=postgresql://postgres:password@postgres:5432/remnawave
NGINX_SERVER_NAME=domain
POSTGRES_PASSWORD=password

# monitoring (k8s)
# If GRAFANA_ADMIN_PASSWORD is empty, render script uses POSTGRES_PASSWORD
# External URL is terminated by host nginx + certbot
GRAFANA_DOMAIN=grafana.domain
GRAFANA_ADMIN_PASSWORD=
GRAFANA_NODEPORT=32000
GRAFANA_PUBLIC_PORT=80
PROMETHEUS_RETENTION=15d
PROMETHEUS_STORAGE_SIZE=20Gi
GRAFANA_STORAGE_SIZE=5Gi
